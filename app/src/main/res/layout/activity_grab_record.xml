<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/near_title" />
    <com.league.widget.PagerSlidingTabStrip
        android:id="@+id/tabs_grabrecords"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textSize="16dp"
        app:pstsDividerColor="@color/gray"
        app:pstsDividerPadding="6dp"
        app:pstsIndicatorColor="@color/red"
        app:pstsShouldExpand="true">
    </com.league.widget.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/paper_grabrecords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>