<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.league.widget.CircleImageView
            android:id="@+id/thumb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/example" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="王思聪"
            android:textColor="@color/black1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pushtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:gravity="center_vertical"
            android:text="3分钟前"
            android:textColor="@color/black1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_hot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/liaoba_new" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="周末又过去了"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="一想到明天就要上班就不开心了"
            android:textColor="@color/black1"
            android:textSize="15sp" />
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:columnWidth="90dip"
        android:horizontalSpacing="10dip"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dip">

    </GridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/black2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip">

        <TextView
            android:id="@+id/yiguanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="已关注"
            android:textColor="@color/black1"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/liaoba_concern" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="关注TA"
                android:textColor="@color/black1"
                android:textSize="15sp"
                android:layout_marginLeft="10dip"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="233"
            android:textColor="@color/black1"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/comnum"
            android:src="@drawable/liaoba_com"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/dianzannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456"
            android:textColor="@color/black1"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/img1"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
        <ImageView

            android:id="@+id/dianzan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/dianzannum"
            android:src="@drawable/liaoba_dianzan"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>
