<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/near_title" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/title"
        android:background="@color/black2" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black2"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/One_tengrab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_dollar" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="10夺金"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_Yuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_grab" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="一元夺宝"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_record" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="夺宝记录"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_question"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_question" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="常见问题"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="10元夺金"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tengrb_more"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="更多>>"
                    android:textColor="@color/black"
                    android:textSize="19sp" />
            </RelativeLayout>

            <com.league.view.HorizontalListView
                android:id="@+id/horizon_listview"
                android:layout_width="wrap_content"
                android:layout_height="170dip"
                android:background="@color/white"></com.league.view.HorizontalListView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="最新揭晓"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <com.league.view.HorizontalListView
                android:id="@+id/horizon_last"
                android:layout_width="wrap_content"
                android:layout_height="170dip"
                android:background="@color/white"></com.league.view.HorizontalListView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="一元夺宝"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/last_more"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="更多>>"
                    android:textColor="@color/black"
                    android:textSize="19sp" />
            </RelativeLayout>
            <com.league.view.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dip"
                android:stretchMode="columnWidth"
                >

            </com.league.view.MyGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
