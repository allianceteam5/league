<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/red" >

        <ImageButton
            android:id="@+id/near_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left"/>
        <LinearLayout
            android:id="@+id/near_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center">
            <TextView
                android:id="@+id/near_centertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/white"
                android:layout_marginRight="6dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/near_ti_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/near_top_down" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/near_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:src="@drawable/near_right" />

        <ImageButton
            android:id="@+id/near_right_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:src="@drawable/icon_item_menu"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/near_right_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:src="@drawable/resource_delete"
            android:visibility="gone" />
        <TextView
            android:id="@+id/near_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发帖"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/ruledetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规则说明"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/near_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/title"
        android:background="@color/black2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/One_tengrab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_dollar" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="10夺金"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_Yuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_grab" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="一元夺宝"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_record" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="夺宝记录"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/One_question"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="3dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/resource_one_question" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="常见问题"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="10夺金"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tengrb_more"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="更多>>"
                    android:textColor="@color/black1"
                    android:textSize="16sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/ten1"
                    android:onClick="onClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ten_image1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <TextView
                        android:id="@+id/money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:text="500金币"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dip"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开奖进度"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/txt_progress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="10dip"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:layout_marginTop="2dp"
                        android:id="@+id/progressbar1"
                        android:layout_width="90dp"
                        android:layout_height="6dip"
                        android:layout_gravity="center_horizontal"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black2"/>
                <LinearLayout
                    android:id="@+id/ten2"
                    android:onClick="onClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ten_image2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <TextView
                        android:id="@+id/money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:text="500金币"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dip"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开奖进度"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/txt_progress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="10dip"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:layout_marginTop="2dp"
                        android:id="@+id/progressbar2"
                        android:layout_width="90dp"
                        android:layout_height="6dip"
                        android:layout_gravity="center_horizontal"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black2"/>
                <LinearLayout
                    android:id="@+id/ten3"
                    android:onClick="onClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ten_image3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <TextView
                        android:id="@+id/money3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:text="500金币"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dip"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开奖进度"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/txt_progress3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="10dip"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:layout_marginTop="2dp"
                        android:id="@+id/progressbar3"
                        android:layout_width="90dp"
                        android:layout_height="6dip"
                        android:layout_gravity="center_horizontal"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black2"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:paddingLeft="15dip"
                android:gravity="center_vertical"
                android:text="最新揭晓"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lastnew_image1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="倒计时"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/txt_countdown1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_toRightOf="@id/txt4"
                            android:gravity="center"
                            android:text="02:04:21"
                            android:textColor="@color/red"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lastnew_image2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="倒计时"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_countdown2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/txt5"
                            android:gravity="center"
                            android:text="02:04:21"
                            android:textColor="@color/red"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lastnew_image3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/example" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="倒计时"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_countdown3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/txt6"
                            android:gravity="center"
                            android:text="02:04:21"
                            android:textColor="@color/red"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="一元夺宝"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/last_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="更多>>"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>
            <com.league.view.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="2dip"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp">
            </com.league.view.MyGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
