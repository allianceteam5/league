<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_liaoba" />

    <com.league.widget.PagerSlidingTabStrip
        android:id="@+id/tabs_liaoba"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textSize="16dp"
        app:pstsDividerColor="@color/gray"
        app:pstsDividerPadding="6dp"
        app:pstsIndicatorColor="@color/red"
        app:pstsShouldExpand="true">
    </com.league.widget.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/paper_liaoba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>