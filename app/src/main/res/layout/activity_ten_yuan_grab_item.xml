<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    >

    <include
        android:id="@+id/title"
        layout="@layout/near_title" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/title"
        android:background="@color/black2" />

    <ScrollView
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/imgview"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:src="@drawable/example"
                android:scaleType="fitXY"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/black2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:id="@+id/period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="44期"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@id/period"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xx商品"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="日期: "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/day_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@id/txt1"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="2015-09-30"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="总需："
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/totalpeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/txt2"
                    android:gravity="center_vertical"
                    android:text="60人次"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/leavepeo"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="剩余40"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dip"
                android:background="@color/black2"
                />
            <RelativeLayout
                android:id="@+id/passannounced"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                android:onClick="onClick">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:text="往期揭晓"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/black2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:text="参与记录"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_centerVertical="true"
                    android:text="自时间起"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/txt3"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/black2"
                />
            <com.league.widget.ListViewForScrollView
                android:id="@+id/record_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.league.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/black2"

        >
        <Button
            android:id="@+id/takeinnow"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即参与"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/addfriendback"
            />
        <Button
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="10dip"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买全部"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/addfriendback"
            />
    </LinearLayout>
</RelativeLayout>