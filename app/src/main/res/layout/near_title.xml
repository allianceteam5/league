<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/bar_color" >

    <ImageButton
        android:id="@+id/near_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:src="@drawable/near_back" />
    <ImageButton
        android:id="@+id/near_back_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_back" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/near_centertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/near_ti_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/near_centertitle"
        android:src="@drawable/near_t_right" />

    <ImageButton
        android:id="@+id/near_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/near_right" />
    <ImageButton
        android:id="@+id/near_right_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_item_menu"
        android:visibility="gone" />
    <ImageButton
        android:id="@+id/near_right_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/resource_delete"
        android:visibility="gone" />

</RelativeLayout>